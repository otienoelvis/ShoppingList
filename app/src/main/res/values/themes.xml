<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LooksGood" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/Custom.ActionBar</item>

    </style>

    <style name="Custom.ActionBar" parent="Widget.MaterialComponents.Light.ActionBar.Solid">
        <item name="background">@color/colorPrimaryDark</item>
    </style>

    <style name="Theme.LooksGood.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/colorPrimaryDark</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/dragon</item>
        <item name="postSplashScreenTheme">@style/Theme.LooksGood</item>
    </style>

    <style name="TextViewSTyle" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
</resources>

